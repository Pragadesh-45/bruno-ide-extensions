{
  "name": "bruno",
  "displayName": "Bruno",
  "publisher": "bruno-api-client",
  "description": "Bruno support for Visual Studio Code.",
  "version": "2.2.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Language Packs",
    "Testing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/usebruno/bruno-ide-extensions"
  },
  "icon": "icon.png",
  "main": "./src/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "brunoPanel",
          "name": "Bruno Panel",
          "command": "bruno.runRequest"
        }
      ]
    },
    "languages": [
      {
        "id": "bruno",
        "aliases": [
          "bruno",
          "bruno"
        ],
        "extensions": [
          ".bru"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bruno",
        "scopeName": "source.bru",
        "path": "./syntaxes/bruno.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "bruno.sayHello",
        "title": "Say Hello"
      },
      {
        "command": "bruno.runRequest",
        "title": "Bruno: Run Request"
      }
    ]
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^9.1.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "build": "webpack"
  }
}
